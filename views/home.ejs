        $(document).ready(function(){
            var scrolllink = $('#yourRecipesbtn2');
            scrolllink.click(function(e){
                e.preventDefault();
                $('body,html').animate({
                    scrollTop: $(this.hash).offset().top
                }, 1000)
            })
        })
        $(document).ready(function(){
            var scrolllink = $('#createRecipebtn2');
            scrolllink.click(function(e){
                e.preventDefault();
                $('body,html').animate({
                    scrollTop: $(this.hash).offset().top
                }, 1000)
            })
        })
        $(document).ready(function(){
            var scrolllink = $('#savedRecipesbtn2');
            scrolllink.click(function(e){
                e.preventDefault();
                $('body,html').animate({
                    scrollTop: $(this.hash).offset().top
                }, 1000)
            })
        })
        $(document).ready(function(){
            var scrolllink = $('#shoppingListbtn2');
            scrolllink.click(function(e){
                e.preventDefault();
                $('body,html').animate({
                    scrollTop: $(this.hash).offset().top
                }, 1000)
            })
        })
        
        window.addEventListener('scroll', function(){
            let nav = document.querySelector('nav');
            nav.classList.toggle('scroll-active', window.scrollY > 0);
            let menu = document.getElementById('menu');
            menu.classList.toggle('scroll-active', window.scrollY > 40);
        })
        
      
    </script>
    
  </body>
</html>
